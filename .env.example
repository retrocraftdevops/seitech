# Seitech Odoo Environment Configuration
# Copy this file to .env and customize as needed

# ===========================================
# DATABASE SETTINGS (Local PostgreSQL)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=odoo
DB_PASSWORD=your_secure_password_here
DB_NAME=seitech
AUTO_CREATE_DB=false

# ===========================================
# ODOO SOURCE PATHS
# ===========================================
# Path to Odoo 19.0 source code
ODOO_SOURCE=./odoo

# Path to Odoo Enterprise addons
ENTERPRISE_SOURCE=./enterprise

# ===========================================
# SERVER SETTINGS
# ===========================================
HTTP_PORT=8069
LONGPOLLING_PORT=8072

# Workers (0 = threaded mode for development)
# For production: (2 * CPU cores) + 1
WORKERS=0
MAX_CRON_THREADS=2

# ===========================================
# LOGGING
# ===========================================
# Options: debug, info, warning, error, critical
LOG_LEVEL=info

# ===========================================
# SECURITY
# ===========================================
# Master password for database management
# CHANGE THIS IN PRODUCTION!
ADMIN_PASSWORD=change_me_in_production

# Allow database listing (set to False in production)
LIST_DB=True

# ===========================================
# PROXY SETTINGS
# ===========================================
# Set to True when behind a reverse proxy (nginx)
PROXY_MODE=False
