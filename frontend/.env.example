# =================================
# SEI Tech Frontend Environment
# =================================

# Frontend URL (used for SSR/SSG API calls)
NEXT_PUBLIC_APP_URL=http://localhost:4000

# Odoo API Configuration
# The URL of your Odoo backend server
NEXT_PUBLIC_ODOO_URL=http://localhost:8069

# Odoo database name
ODOO_DATABASE=seitech

# Optional: API key for server-side authentication
ODOO_API_KEY=your_api_key_here

# =================================
# Authentication (NextAuth)
# =================================

# URL of the frontend (used for callbacks)
NEXTAUTH_URL=http://localhost:4000

# Secret for NextAuth session encryption (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here

# =================================
# Analytics
# =================================

# Google Analytics ID
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager ID
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# =================================
# Payment (Stripe)
# =================================

# Stripe public key (safe to expose)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_xxx

# Stripe secret key (server-side only)
STRIPE_SECRET_KEY=sk_test_xxx

# Stripe webhook secret
STRIPE_WEBHOOK_SECRET=whsec_xxx

# =================================
# Image CDN
# =================================

# Cloudinary cloud name (optional)
NEXT_PUBLIC_CLOUDINARY_CLOUD=your_cloud_name

# =================================
# Cache & Revalidation
# =================================

# Secret for triggering cache revalidation
REVALIDATION_SECRET=your_revalidation_secret

# =================================
# Development
# =================================

# Enable debug mode
NEXT_PUBLIC_DEBUG=false
