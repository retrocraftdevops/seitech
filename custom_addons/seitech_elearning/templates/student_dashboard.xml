<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Student Dashboard Main Template -->
    <template id="student_dashboard" name="Student Learning Dashboard">
        <t t-call="website.layout">
            <div id="wrap" class="o_portal">
                <div class="container py-5">
                    <!-- Header -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h1 class="h2 mb-1">Welcome back, <t t-esc="user.name"/>!</h1>
                                    <p class="text-muted mb-0">Continue your learning journey</p>
                                </div>
                                <a href="/courses" class="btn btn-primary">
                                    <i class="fa fa-plus me-2"/>Explore Courses
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Stats Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3 mb-3">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center">
                                    <div class="text-primary mb-2">
                                        <i class="fa fa-book fa-2x"/>
                                    </div>
                                    <h3 class="mb-0"><t t-esc="total_courses"/></h3>
                                    <small class="text-muted">Enrolled Courses</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center">
                                    <div class="text-success mb-2">
                                        <i class="fa fa-check-circle fa-2x"/>
                                    </div>
                                    <h3 class="mb-0"><t t-esc="completed_count"/></h3>
                                    <small class="text-muted">Completed</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center">
                                    <div class="text-warning mb-2">
                                        <i class="fa fa-star fa-2x"/>
                                    </div>
                                    <h3 class="mb-0"><t t-esc="total_points"/></h3>
                                    <small class="text-muted">Points Earned</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body text-center">
                                    <div class="text-danger mb-2">
                                        <i class="fa fa-fire fa-2x"/>
                                    </div>
                                    <h3 class="mb-0"><t t-esc="learning_streak"/> days</h3>
                                    <small class="text-muted">Learning Streak</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Active Courses -->
                        <div class="col-lg-8">
                            <div class="card border-0 shadow-sm mb-4">
                                <div class="card-header bg-white border-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0">Continue Learning</h5>
                                        <a href="/my/courses?status=active" class="btn btn-sm btn-outline-primary">View All</a>
                                    </div>
                                </div>
                                <div class="card-body p-0">
                                    <t t-if="active_enrollments">
                                        <t t-foreach="active_enrollments" t-as="enrollment">
                                            <div class="p-3 border-bottom d-flex align-items-center">
                                                <div class="me-3" style="width: 80px; height: 60px;">
                                                    <t t-if="enrollment.channel_id.image_1920">
                                                        <img t-att-src="'/web/image/slide.channel/%s/image_128' % enrollment.channel_id.id"
                                                             class="rounded" style="width: 100%; height: 100%; object-fit: cover;"/>
                                                    </t>
                                                    <t t-else="">
                                                        <div class="bg-light rounded d-flex align-items-center justify-content-center h-100">
                                                            <i class="fa fa-book text-muted"/>
                                                        </div>
                                                    </t>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1">
                                                        <a t-att-href="'/slides/%s' % enrollment.channel_id.id" class="text-dark text-decoration-none">
                                                            <t t-esc="enrollment.channel_id.name"/>
                                                        </a>
                                                    </h6>
                                                    <div class="progress" style="height: 6px;">
                                                        <div class="progress-bar bg-primary"
                                                             t-attf-style="width: #{enrollment.completion_percentage}%"/>
                                                    </div>
                                                    <small class="text-muted"><t t-esc="int(enrollment.completion_percentage)"/>% complete</small>
                                                </div>
                                                <a t-att-href="'/slides/%s' % enrollment.channel_id.id" class="btn btn-sm btn-primary ms-3">
                                                    Continue
                                                </a>
                                            </div>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <div class="p-4 text-center text-muted">
                                            <i class="fa fa-graduation-cap fa-3x mb-3"/>
                                            <p>You haven't started any courses yet.</p>
                                            <a href="/courses" class="btn btn-primary">Browse Courses</a>
                                        </div>
                                    </t>
                                </div>
                            </div>

                            <!-- Completed Courses -->
                            <div class="card border-0 shadow-sm mb-4">
                                <div class="card-header bg-white border-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0">Completed Courses</h5>
                                        <a href="/my/courses?status=completed" class="btn btn-sm btn-outline-success">View All</a>
                                    </div>
                                </div>
                                <div class="card-body p-0">
                                    <t t-if="completed_enrollments">
                                        <t t-foreach="completed_enrollments[:5]" t-as="enrollment">
                                            <div class="p-3 border-bottom d-flex align-items-center">
                                                <div class="me-3">
                                                    <i class="fa fa-check-circle text-success fa-2x"/>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-0">
                                                        <t t-esc="enrollment.channel_id.name"/>
                                                    </h6>
                                                    <small class="text-muted">Completed</small>
                                                </div>
                                                <t t-if="enrollment.certificate_id">
                                                    <a t-att-href="'/my/certificates/%s' % enrollment.certificate_id.id" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="fa fa-certificate me-1"/>Certificate
                                                    </a>
                                                </t>
                                            </div>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <div class="p-4 text-center text-muted">
                                            <p class="mb-0">No completed courses yet. Keep learning!</p>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>

                        <!-- Sidebar -->
                        <div class="col-lg-4">
                            <!-- Certificates -->
                            <div class="card border-0 shadow-sm mb-4">
                                <div class="card-header bg-white border-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0">
                                            <i class="fa fa-certificate text-warning me-2"/>Certificates
                                        </h5>
                                        <a href="/my/certificates" class="btn btn-sm btn-link">View All</a>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <t t-if="certificates">
                                        <t t-foreach="certificates[:3]" t-as="cert">
                                            <div class="d-flex align-items-center mb-3">
                                                <div class="bg-warning bg-opacity-10 rounded p-2 me-3">
                                                    <i class="fa fa-award text-warning"/>
                                                </div>
                                                <div>
                                                    <strong class="d-block"><t t-esc="cert.channel_id.name"/></strong>
                                                    <small class="text-muted"><t t-esc="cert.issue_date" t-options="{'widget': 'date'}"/></small>
                                                </div>
                                            </div>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <p class="text-muted text-center mb-0">Complete courses to earn certificates!</p>
                                    </t>
                                </div>
                            </div>

                            <!-- Badges -->
                            <div class="card border-0 shadow-sm mb-4">
                                <div class="card-header bg-white border-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0">
                                            <i class="fa fa-trophy text-primary me-2"/>Badges
                                        </h5>
                                        <a href="/my/achievements" class="btn btn-sm btn-link">View All</a>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <t t-if="badges">
                                        <div class="d-flex flex-wrap gap-2">
                                            <t t-foreach="badges[:6]" t-as="student_badge">
                                                <div class="badge-icon" 
                                                     t-att-title="student_badge.badge_id.name"
                                                     t-attf-style="background-color: #{student_badge.badge_id.color}20; color: #{student_badge.badge_id.color};">
                                                    <t t-if="student_badge.badge_id.icon">
                                                        <i t-att-class="student_badge.badge_id.icon"/>
                                                    </t>
                                                    <t t-else="">
                                                        <i class="fa fa-star"/>
                                                    </t>
                                                </div>
                                            </t>
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <p class="text-muted text-center mb-0">Earn badges by completing activities!</p>
                                    </t>
                                </div>
                            </div>

                            <!-- Quick Links -->
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-white border-0 py-3">
                                    <h5 class="mb-0">Quick Links</h5>
                                </div>
                                <div class="list-group list-group-flush">
                                    <a href="/my/courses" class="list-group-item list-group-item-action d-flex align-items-center">
                                        <i class="fa fa-book me-3 text-primary"/>My Courses
                                    </a>
                                    <a href="/my/certificates" class="list-group-item list-group-item-action d-flex align-items-center">
                                        <i class="fa fa-certificate me-3 text-warning"/>My Certificates
                                    </a>
                                    <a href="/my/achievements" class="list-group-item list-group-item-action d-flex align-items-center">
                                        <i class="fa fa-trophy me-3 text-success"/>Achievements
                                    </a>
                                    <a href="/leaderboard" class="list-group-item list-group-item-action d-flex align-items-center">
                                        <i class="fa fa-users me-3 text-info"/>Leaderboard
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
