<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Learning Path Rules -->
        <record id="learning_path_student_rule" model="ir.rule">
            <field name="name">Student: Own Learning Paths</field>
            <field name="model_id" ref="model_seitech_learning_path"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_elearning_student'))]"/>
        </record>

        <record id="learning_path_instructor_rule" model="ir.rule">
            <field name="name">Instructor: Student Learning Paths</field>
            <field name="model_id" ref="model_seitech_learning_path"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_elearning_instructor'))]"/>
        </record>

        <record id="learning_path_manager_rule" model="ir.rule">
            <field name="name">Manager: All Learning Paths</field>
            <field name="model_id" ref="model_seitech_learning_path"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_elearning_manager'))]"/>
        </record>

        <!-- Learning Path Node Rules -->
        <record id="path_node_student_rule" model="ir.rule">
            <field name="name">Student: Own Path Nodes</field>
            <field name="model_id" ref="model_seitech_learning_path_node"/>
            <field name="domain_force">[('path_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_elearning_student'))]"/>
        </record>

        <record id="path_node_instructor_rule" model="ir.rule">
            <field name="name">Instructor: All Path Nodes</field>
            <field name="model_id" ref="model_seitech_learning_path_node"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_elearning_instructor'))]"/>
        </record>

        <!-- User Skill Rules -->
        <record id="user_skill_student_rule" model="ir.rule">
            <field name="name">Student: Own Skills</field>
            <field name="model_id" ref="model_seitech_user_skill"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_elearning_student'))]"/>
        </record>

        <record id="user_skill_instructor_rule" model="ir.rule">
            <field name="name">Instructor: Student Skills</field>
            <field name="model_id" ref="model_seitech_user_skill"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_elearning_instructor'))]"/>
        </record>

        <!-- Recommendation Rules -->
        <record id="recommendation_student_rule" model="ir.rule">
            <field name="name">Student: Own Recommendations</field>
            <field name="model_id" ref="model_seitech_recommendation"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_elearning_student'))]"/>
        </record>

        <record id="recommendation_manager_rule" model="ir.rule">
            <field name="name">Manager: All Recommendations</field>
            <field name="model_id" ref="model_seitech_recommendation"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_elearning_manager'))]"/>
        </record>

    </data>
</odoo>
