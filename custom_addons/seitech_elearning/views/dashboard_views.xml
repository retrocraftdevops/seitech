<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- E-Learning Dashboard Action -->
        <record id="action_elearning_dashboard" model="ir.actions.client">
            <field name="name">E-Learning Dashboard</field>
            <field name="tag">seitech_elearning_dashboard</field>
        </record>

        <!-- Enrollment Statistics Action -->
        <record id="action_enrollment_stats" model="ir.actions.act_window">
            <field name="name">Enrollment Statistics</field>
            <field name="res_model">seitech.enrollment</field>
            <field name="view_mode">pivot,graph,list</field>
            <field name="context">{
                'search_default_group_course': 1,
                'search_default_group_state': 1,
            }</field>
        </record>

        <!-- Enrollment Pivot View -->
        <record id="view_enrollment_pivot" model="ir.ui.view">
            <field name="name">seitech.enrollment.pivot</field>
            <field name="model">seitech.enrollment</field>
            <field name="arch" type="xml">
                <pivot string="Enrollment Analysis" sample="1">
                    <field name="channel_id" type="row"/>
                    <field name="enrollment_date" type="col" interval="month"/>
                </pivot>
            </field>
        </record>

        <!-- Enrollment Graph View -->
        <record id="view_enrollment_graph" model="ir.ui.view">
            <field name="name">seitech.enrollment.graph</field>
            <field name="model">seitech.enrollment</field>
            <field name="arch" type="xml">
                <graph string="Enrollment Trends" type="line" sample="1">
                    <field name="enrollment_date" interval="week"/>
                </graph>
            </field>
        </record>

        <!-- Certificate Statistics Action -->
        <record id="action_certificate_stats" model="ir.actions.act_window">
            <field name="name">Certificate Statistics</field>
            <field name="res_model">seitech.certificate</field>
            <field name="view_mode">pivot,graph,list</field>
        </record>

        <!-- Certificate Pivot View -->
        <record id="view_certificate_pivot" model="ir.ui.view">
            <field name="name">seitech.certificate.pivot</field>
            <field name="model">seitech.certificate</field>
            <field name="arch" type="xml">
                <pivot string="Certificate Analysis" sample="1">
                    <field name="channel_id" type="row"/>
                    <field name="issue_date" type="col" interval="month"/>
                </pivot>
            </field>
        </record>

        <!-- Revenue Dashboard (for paid courses) -->
        <record id="action_revenue_stats" model="ir.actions.act_window">
            <field name="name">Revenue Statistics</field>
            <field name="res_model">seitech.enrollment</field>
            <field name="view_mode">pivot,graph,list</field>
            <field name="domain">[('enrollment_type', '=', 'paid')]</field>
            <field name="context">{
                'search_default_group_course': 1,
            }</field>
        </record>

        <!-- Revenue Pivot View -->
        <record id="view_revenue_pivot" model="ir.ui.view">
            <field name="name">seitech.enrollment.revenue.pivot</field>
            <field name="model">seitech.enrollment</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <pivot string="Revenue Analysis">
                    <field name="channel_id" type="row"/>
                    <field name="enrollment_date" type="col" interval="month"/>
                    <field name="amount_paid" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Instructor Performance Action -->
        <record id="action_instructor_performance" model="ir.actions.act_window">
            <field name="name">Instructor Performance</field>
            <field name="res_model">seitech.instructor</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>
