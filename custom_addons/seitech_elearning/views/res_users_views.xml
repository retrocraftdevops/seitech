<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Extended User Form View -->
        <record id="view_users_form_seitech" model="ir.ui.view">
            <field name="name">res.users.form.seitech</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='preferences']" position="after">
                    <page string="SEI Tech E-Learning" name="seitech_elearning">
                        <group>
                            <group string="Role &amp; Permissions">
                                <field name="seitech_role" widget="radio"/>
                                <field name="instructor_id"
                                       invisible="seitech_role != 'instructor'"
                                       domain="[('user_id', '=', False)]"
                                       context="{'default_user_id': active_id}"/>
                            </group>
                            <group string="Permissions Summary" invisible="not seitech_role">
                                <label for="id" string="Based on the selected role, this user has the following permissions:" colspan="2"/>
                                <div class="o_row" colspan="2">
                                    <field name="id" invisible="1"/>
                                    <!-- Permissions will be shown dynamically based on role -->
                                </div>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Extended User Tree View -->
        <record id="view_users_tree_seitech" model="ir.ui.view">
            <field name="name">res.users.tree.seitech</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='login']" position="after">
                    <field name="seitech_role" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- User Management Menu for Admins -->
        <record id="action_seitech_users" model="ir.actions.act_window">
            <field name="name">Users</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new user
                </p>
                <p>
                    Manage platform users and assign SEI Tech roles for access control.
                </p>
            </field>
        </record>

        <!-- Search View for Users with Role Filter -->
        <record id="view_users_search_seitech" model="ir.ui.view">
            <field name="name">res.users.search.seitech</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <filter string="Students" name="filter_students"
                            domain="[('seitech_role', '=', 'student')]"/>
                    <filter string="Student Admins" name="filter_student_admins"
                            domain="[('seitech_role', '=', 'student_admin')]"/>
                    <filter string="Instructors" name="filter_instructors"
                            domain="[('seitech_role', '=', 'instructor')]"/>
                    <filter string="Managers" name="filter_managers"
                            domain="[('seitech_role', '=', 'manager')]"/>
                    <filter string="Administrators" name="filter_admins"
                            domain="[('seitech_role', '=', 'admin')]"/>
                    <group expand="0" string="Group By">
                        <filter string="SEI Tech Role" name="group_by_seitech_role"
                                context="{'group_by': 'seitech_role'}"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Role-based Dashboard Actions -->
        <record id="action_admin_dashboard" model="ir.actions.client">
            <field name="name">Admin Dashboard</field>
            <field name="tag">seitech_admin_dashboard</field>
            <field name="target">current</field>
        </record>

        <record id="action_manager_dashboard" model="ir.actions.client">
            <field name="name">Manager Dashboard</field>
            <field name="tag">seitech_manager_dashboard</field>
            <field name="target">current</field>
        </record>

        <record id="action_instructor_dashboard" model="ir.actions.client">
            <field name="name">Instructor Dashboard</field>
            <field name="tag">seitech_instructor_dashboard</field>
            <field name="target">current</field>
        </record>

        <!-- Server Actions for Role Management -->
        <record id="action_promote_to_instructor" model="ir.actions.server">
            <field name="name">Promote to Instructor</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="binding_model_id" ref="base.model_res_users"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field name="code">
                for record in records:
                    if record.seitech_role != 'instructor':
                        record.write({'seitech_role': 'instructor'})
            </field>
            <field name="groups_id" eval="[(4, ref('group_elearning_admin'))]"/>
        </record>

        <record id="action_promote_to_manager" model="ir.actions.server">
            <field name="name">Promote to Manager</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="binding_model_id" ref="base.model_res_users"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field name="code">
                for record in records:
                    if record.seitech_role != 'manager':
                        record.write({'seitech_role': 'manager'})
            </field>
            <field name="groups_id" eval="[(4, ref('group_elearning_admin'))]"/>
        </record>

        <record id="action_demote_to_student" model="ir.actions.server">
            <field name="name">Demote to Student</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="binding_model_id" ref="base.model_res_users"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field name="code">
                for record in records:
                    if record.seitech_role != 'student':
                        record.write({'seitech_role': 'student'})
            </field>
            <field name="groups_id" eval="[(4, ref('group_elearning_admin'))]"/>
        </record>

    </data>
</odoo>
