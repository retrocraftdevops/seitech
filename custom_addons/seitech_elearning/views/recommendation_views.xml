<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Recommendation Form View -->
    <record id="view_recommendation_form" model="ir.ui.view">
        <field name="name">seitech.recommendation.form</field>
        <field name="model">seitech.recommendation</field>
        <field name="arch" type="xml">
            <form string="Course Recommendation">
                <header>
                    <button name="action_viewed" type="object" string="Mark as Viewed" 
                            invisible="status != 'pending'" class="btn-secondary"/>
                    <button name="action_enroll" type="object" string="âœ“ Enroll Now" 
                            invisible="status == 'enrolled'" class="oe_highlight"/>
                    <button name="action_save" type="object" string="ðŸ’¾ Save for Later" 
                            invisible="status in ['enrolled', 'saved']" class="btn-info"/>
                    <button name="action_dismiss" type="object" string="âœ• Not Interested" 
                            invisible="status in ['enrolled', 'dismissed']" class="btn-warning"/>
                    <field name="status" widget="statusbar" statusbar_visible="pending,viewed,enrolled"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Expired" bg_color="bg-danger" 
                            invisible="not is_expired"/>
                    
                    <div class="oe_title">
                        <label for="course_id"/>
                        <h1><field name="course_id" readonly="1"/></h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="user_id" readonly="1"/>
                            <field name="score" widget="progressbar"/>
                            <field name="algorithm" widget="badge"/>
                        </group>
                        <group>
                            <field name="created_date" readonly="1"/>
                            <field name="expires_date" readonly="1"/>
                            <field name="is_expired" readonly="1" widget="boolean"/>
                            <field name="viewed_date" readonly="1" invisible="not viewed_date"/>
                            <field name="action_date" readonly="1" invisible="not action_date"/>
                        </group>
                    </group>
                    
                    <group string="Why This Course?">
                        <field name="reason_type" widget="badge" 
                               decoration-info="reason_type == 'skill_requirement'"
                               decoration-success="reason_type == 'similar_users'"/>
                        <field name="reason_text" colspan="2" readonly="1" nolabel="1"/>
                    </group>
                    
                    <notebook>
                        <page string="Course Details" name="course">
                            <group>
                                <field name="course_name" readonly="1"/>
                                <field name="course_category_id" readonly="1"/>
                            </group>
                            <button name="%(action_slide_channel)d" type="action" 
                                    string="View Full Course Details" icon="fa-external-link" 
                                    context="{'active_id': course_id}"/>
                        </page>
                        
                        <page string="Recommendation Data" name="data" groups="base.group_no_one">
                            <field name="reason_data" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Recommendation Tree View -->
    <record id="view_recommendation_tree" model="ir.ui.view">
        <field name="name">seitech.recommendation.tree</field>
        <field name="model">seitech.recommendation</field>
        <field name="arch" type="xml">
            <tree decoration-success="status == 'enrolled'" 
                  decoration-info="status == 'saved'"
                  decoration-muted="status == 'dismissed' or is_expired">
                <field name="user_id"/>
                <field name="course_id"/>
                <field name="score" widget="progressbar"/>
                <field name="algorithm" optional="hide"/>
                <field name="reason_type" widget="badge" optional="show"/>
                <field name="reason_text"/>
                <field name="status" widget="badge" 
                       decoration-success="status == 'enrolled'"
                       decoration-info="status == 'saved'"
                       decoration-warning="status == 'pending'"/>
                <field name="created_date" optional="hide"/>
                <field name="is_expired" widget="boolean" optional="show"/>
                <button name="action_enroll" type="object" string="Enroll" 
                        icon="fa-plus" invisible="status == 'enrolled'"/>
            </tree>
        </field>
    </record>
    
    <!-- Recommendation Kanban View -->
    <record id="view_recommendation_kanban" model="ir.ui.view">
        <field name="name">seitech.recommendation.kanban</field>
        <field name="model">seitech.recommendation</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="reason_type">
                <field name="course_id"/>
                <field name="course_name"/>
                <field name="score"/>
                <field name="reason_type"/>
                <field name="reason_text"/>
                <field name="status"/>
                <field name="is_expired"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" t-att-class="record.is_expired.raw_value ? 'text-muted' : ''">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="course_name"/></strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="reason_type" widget="badge"/>
                                    </div>
                                </div>
                                <span class="badge badge-pill" t-att-class="
                                    record.score.raw_value >= 80 ? 'badge-success' : 
                                    record.score.raw_value >= 60 ? 'badge-info' : 'badge-secondary'">
                                    <field name="score" widget="integer"/>% match
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="reason_text"/>
                                <div class="mt-2">
                                    <span class="badge" t-att-class="
                                        record.status.raw_value === 'enrolled' ? 'badge-success' : 
                                        record.status.raw_value === 'saved' ? 'badge-info' : 
                                        record.status.raw_value === 'dismissed' ? 'badge-secondary' : 'badge-warning'">
                                        <field name="status"/>
                                    </span>
                                    <span t-if="record.is_expired.raw_value" class="badge badge-danger ml-2">Expired</span>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom mt-2">
                                <button t-if="record.status.raw_value !== 'enrolled'" 
                                        name="action_enroll" type="object" 
                                        class="btn btn-primary btn-sm">Enroll</button>
                                <button t-if="record.status.raw_value === 'pending'" 
                                        name="action_save" type="object" 
                                        class="btn btn-secondary btn-sm ml-1">Save</button>
                                <button t-if="record.status.raw_value !== 'dismissed'" 
                                        name="action_dismiss" type="object" 
                                        class="btn btn-sm ml-1">âœ•</button>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Recommendation Search View -->
    <record id="view_recommendation_search" model="ir.ui.view">
        <field name="name">seitech.recommendation.search</field>
        <field name="model">seitech.recommendation</field>
        <field name="arch" type="xml">
            <search>
                <field name="course_id" string="Course"/>
                <field name="user_id"/>
                <separator/>
                <filter name="my_recommendations" string="My Recommendations" 
                        domain="[('user_id', '=', uid)]"/>
                <filter name="pending" string="Pending" 
                        domain="[('status', '=', 'pending')]"/>
                <filter name="saved" string="Saved" 
                        domain="[('status', '=', 'saved')]"/>
                <filter name="high_score" string="High Match (80%+)" 
                        domain="[('score', '>=', 80)]"/>
                <separator/>
                <filter name="not_expired" string="Active" 
                        domain="[('is_expired', '=', False)]"/>
                <filter name="expired" string="Expired" 
                        domain="[('is_expired', '=', True)]"/>
                <separator/>
                <filter name="collaborative" string="Based on Similar Users" 
                        domain="[('algorithm', '=', 'collaborative')]"/>
                <filter name="skill_gap" string="Skill Gap Analysis" 
                        domain="[('algorithm', '=', 'skill_gap')]"/>
                <filter name="trending" string="Trending" 
                        domain="[('algorithm', '=', 'trending')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_user" string="User" context="{'group_by': 'user_id'}"/>
                    <filter name="group_reason" string="Reason" context="{'group_by': 'reason_type'}"/>
                    <filter name="group_algorithm" string="Algorithm" context="{'group_by': 'algorithm'}"/>
                    <filter name="group_status" string="Status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Actions -->
    <record id="action_recommendation" model="ir.actions.act_window">
        <field name="name">Course Recommendations</field>
        <field name="res_model">seitech.recommendation</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{
            'search_default_my_recommendations': 1,
            'search_default_pending': 1,
            'search_default_not_expired': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No recommendations yet
            </p>
            <p>
                AI-powered course recommendations will appear here based on:<br/>
                â€¢ Your learning history and preferences<br/>
                â€¢ Skills you're developing<br/>
                â€¢ What similar users are taking<br/>
                â€¢ Currently trending courses
            </p>
        </field>
    </record>
    
    <record id="action_generate_recommendations" model="ir.actions.server">
        <field name="name">Generate Recommendations</field>
        <field name="model_id" ref="model_seitech_recommendation"/>
        <field name="binding_model_id" ref="base.model_res_users"/>
        <field name="state">code</field>
        <field name="code">
if records:
    for user in records:
        env['seitech.recommendation'].generate_recommendations(user.id, limit=10)
        </field>
    </record>
    
</odoo>
