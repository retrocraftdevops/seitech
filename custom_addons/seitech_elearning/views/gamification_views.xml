<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Badge Form View -->
        <record id="view_badge_form" model="ir.ui.view">
            <field name="name">seitech.badge.form</field>
            <field name="model">seitech.badge</field>
            <field name="arch" type="xml">
                <form string="Badge">
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="Badge Name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="badge_type"/>
                                <field name="icon"/>
                                <field name="color" widget="color"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="points_awarded"/>
                                <field name="is_active"/>
                                <field name="earned_count" readonly="1"/>
                            </group>
                        </group>
                        <field name="description" placeholder="Badge description..."/>
                        <group string="Earning Criteria">
                            <group>
                                <field name="auto_award"/>
                                <field name="criteria_type" invisible="not auto_award"/>
                            </group>
                            <group invisible="not auto_award">
                                <field name="criteria_value"
                                       invisible="criteria_type in ('specific_course', 'manual')"/>
                                <field name="criteria_channel_id"
                                       invisible="criteria_type != 'specific_course'"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Badge List View -->
        <record id="view_badge_list" model="ir.ui.view">
            <field name="name">seitech.badge.list</field>
            <field name="model">seitech.badge</field>
            <field name="arch" type="xml">
                <list string="Badges">
                    <field name="sequence" widget="handle"/>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <field name="name"/>
                    <field name="badge_type"/>
                    <field name="points_awarded"/>
                    <field name="earned_count"/>
                    <field name="is_active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Badge Kanban View -->
        <record id="view_badge_kanban" model="ir.ui.view">
            <field name="name">seitech.badge.kanban</field>
            <field name="model">seitech.badge</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="image"/>
                    <field name="badge_type"/>
                    <field name="points_awarded"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="card">
                            <aside>
                                <field name="image" widget="image" class="o_kanban_image"/>
                            </aside>
                            <main>
                                <field name="name" class="fw-bold"/>
                                <field name="badge_type" widget="badge"/>
                                <span class="badge text-bg-success mt-2">
                                    +<field name="points_awarded"/> pts
                                </span>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Student Points List View -->
        <record id="view_student_points_list" model="ir.ui.view">
            <field name="name">seitech.student.points.list</field>
            <field name="model">seitech.student.points</field>
            <field name="arch" type="xml">
                <list string="Points History" create="0" edit="0">
                    <field name="earn_date"/>
                    <field name="user_id"/>
                    <field name="activity_type"/>
                    <field name="description"/>
                    <field name="channel_id" optional="show"/>
                    <field name="points" sum="Total Points"/>
                </list>
            </field>
        </record>

        <!-- Student Badge List View -->
        <record id="view_student_badge_list" model="ir.ui.view">
            <field name="name">seitech.student.badge.list</field>
            <field name="model">seitech.student.badge</field>
            <field name="arch" type="xml">
                <list string="Earned Badges" create="0" edit="0">
                    <field name="earn_date"/>
                    <field name="user_id"/>
                    <field name="badge_id"/>
                    <field name="channel_id" optional="show"/>
                </list>
            </field>
        </record>

        <!-- Leaderboard List View -->
        <record id="view_leaderboard_list" model="ir.ui.view">
            <field name="name">seitech.student.leaderboard.list</field>
            <field name="model">seitech.student.leaderboard</field>
            <field name="arch" type="xml">
                <list string="Leaderboard" create="0" edit="0" delete="0">
                    <field name="rank"/>
                    <field name="user_id"/>
                    <field name="total_points"/>
                    <field name="courses_completed"/>
                    <field name="badges_earned"/>
                </list>
            </field>
        </record>

        <!-- Badge Action -->
        <record id="action_badge" model="ir.actions.act_window">
            <field name="name">Badges</field>
            <field name="res_model">seitech.badge</field>
            <field name="view_mode">kanban,list,form</field>
        </record>

        <!-- Student Points Action -->
        <record id="action_student_points" model="ir.actions.act_window">
            <field name="name">Points History</field>
            <field name="res_model">seitech.student.points</field>
            <field name="view_mode">list</field>
        </record>

        <!-- Leaderboard Action -->
        <record id="action_leaderboard" model="ir.actions.act_window">
            <field name="name">Leaderboard</field>
            <field name="res_model">seitech.student.leaderboard</field>
            <field name="view_mode">list</field>
        </record>

    </data>
</odoo>
