<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Enrollment Form View -->
        <record id="view_enrollment_form" model="ir.ui.view">
            <field name="name">seitech.enrollment.form</field>
            <field name="model">seitech.enrollment</field>
            <field name="arch" type="xml">
                <form string="Enrollment">
                    <header>
                        <button name="action_activate" string="Activate" type="object"
                                class="btn-primary"
                                invisible="state not in ('draft', 'pending')"/>
                        <button name="action_complete" string="Mark Completed" type="object"
                                invisible="state != 'active'"/>
                        <button name="action_suspend" string="Suspend" type="object"
                                invisible="state != 'active'"/>
                        <button name="action_reactivate" string="Reactivate" type="object"
                                invisible="state != 'suspended'"/>
                        <button name="action_cancel" string="Cancel" type="object"
                                invisible="state in ('completed', 'cancelled')"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,active,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_certificate" type="object"
                                    class="oe_stat_button" icon="fa-certificate"
                                    invisible="not certificate_issued">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Certificate</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="channel_id"/>
                                <field name="user_id"/>
                                <field name="partner_id" invisible="1"/>
                                <field name="enrollment_type"/>
                            </group>
                            <group>
                                <field name="enrollment_date"/>
                                <field name="expiration_date"/>
                                <field name="last_activity_date" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Progress" name="progress">
                                <group>
                                    <group>
                                        <field name="completion_percentage" widget="progressbar"/>
                                        <field name="completed_slides"/>
                                        <field name="total_slides"/>
                                    </group>
                                    <group>
                                        <field name="time_spent"/>
                                        <field name="certificate_issued" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Payment" name="payment"
                                  invisible="enrollment_type not in ('paid', 'gift')">
                                <group>
                                    <group>
                                        <field name="amount_paid"/>
                                        <field name="currency_id"/>
                                    </group>
                                    <group>
                                        <field name="payment_id"/>
                                        <field name="sale_order_id"/>
                                        <field name="invoice_id"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Gift Details" name="gift"
                                  invisible="enrollment_type != 'gift'">
                                <group>
                                    <field name="gifted_by_id"/>
                                    <field name="gift_message"/>
                                </group>
                            </page>
                            <page string="Corporate" name="corporate"
                                  invisible="enrollment_type != 'corporate'">
                                <group>
                                    <field name="company_sponsor_id"/>
                                </group>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes" placeholder="Internal notes..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Enrollment List View -->
        <record id="view_enrollment_list" model="ir.ui.view">
            <field name="name">seitech.enrollment.list</field>
            <field name="model">seitech.enrollment</field>
            <field name="arch" type="xml">
                <list string="Enrollments" decoration-success="state == 'completed'"
                      decoration-warning="state == 'suspended'"
                      decoration-danger="state in ('expired', 'cancelled')">
                    <field name="name"/>
                    <field name="channel_id"/>
                    <field name="user_id"/>
                    <field name="enrollment_type" optional="show"/>
                    <field name="enrollment_date"/>
                    <field name="completion_percentage" widget="progressbar"/>
                    <field name="state" widget="badge"
                           decoration-success="state == 'completed'"
                           decoration-info="state == 'active'"
                           decoration-warning="state in ('pending', 'suspended')"
                           decoration-danger="state in ('expired', 'cancelled')"/>
                </list>
            </field>
        </record>

        <!-- Enrollment Action -->
        <record id="action_enrollment" model="ir.actions.act_window">
            <field name="name">Enrollments</field>
            <field name="res_model">seitech.enrollment</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_filter_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No enrollments yet
                </p>
                <p>
                    Enrollments are created when students sign up for courses.
                </p>
            </field>
        </record>

    </data>
</odoo>
