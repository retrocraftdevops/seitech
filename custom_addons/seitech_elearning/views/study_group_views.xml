<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Study Group Form View -->
    <record id="view_study_group_form" model="ir.ui.view">
        <field name="name">seitech.study.group.form</field>
        <field name="model">seitech.study.group</field>
        <field name="arch" type="xml">
            <form string="Study Group">
                <header>
                    <button name="action_activate" string="Activate" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_archive" string="Archive" type="object" 
                            invisible="state == 'archived'"/>
                    <button name="action_join" string="Join Group" type="object" 
                            class="oe_highlight"/>
                    <button name="action_leave" string="Leave Group" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active"/>
                </header>
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" 
                           options="{'preview_image': 'image_128'}"/>
                    
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-users">
                            <field name="member_count" widget="statinfo" string="Members"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-comments" 
                                name="%(action_discussion)d" type="action" 
                                context="{'search_default_study_group_id': active_id}">
                            <field name="discussion_count" widget="statinfo" string="Discussions"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-calendar">
                            <field name="schedule_ids" widget="statinfo" string="Sessions"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Featured" bg_color="bg-success" 
                            invisible="not is_featured"/>
                    
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Group Name"/></h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="owner_id"/>
                            <field name="group_type"/>
                            <field name="privacy"/>
                            <field name="join_policy"/>
                        </group>
                        <group>
                            <field name="course_id"/>
                            <field name="learning_path_id"/>
                            <field name="max_members"/>
                            <field name="progress_percentage" widget="progressbar"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="skill_ids" widget="many2many_tags"/>
                    </group>
                    
                    <field name="description" widget="html" placeholder="Group description and goals..."/>
                    
                    <notebook>
                        <page string="Members" name="members">
                            <field name="member_ids" nolabel="1">
                                <tree decoration-info="role == 'moderator'" 
                                      decoration-success="role == 'admin'">
                                    <field name="user_name"/>
                                    <field name="role" widget="badge" 
                                           decoration-info="role == 'moderator'"
                                           decoration-success="role == 'admin'"/>
                                    <field name="state" widget="badge" 
                                           decoration-warning="state == 'pending'"
                                           decoration-success="state == 'active'"/>
                                    <field name="contribution_score"/>
                                    <field name="discussion_count"/>
                                    <field name="reply_count"/>
                                    <field name="helpful_count"/>
                                    <field name="progress_percentage" widget="progressbar"/>
                                    <field name="join_date"/>
                                    <button name="action_approve" string="Approve" type="object" 
                                            icon="fa-check" invisible="state != 'pending'"/>
                                    <button name="action_promote_to_moderator" string="Promote" type="object" 
                                            icon="fa-arrow-up" invisible="role != 'member' or state != 'active'"/>
                                    <button name="action_remove" string="Remove" type="object" 
                                            icon="fa-times" confirm="Remove this member?"/>
                                </tree>
                            </field>
                            <group>
                                <button name="action_invite_users" string="Invite Users" type="object" 
                                        class="btn-primary"/>
                            </group>
                        </page>
                        
                        <page string="Schedule" name="schedule">
                            <field name="schedule_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="scheduled_date"/>
                                    <field name="duration"/>
                                    <field name="meeting_url" widget="url"/>
                                    <field name="attendee_count"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Activity Feed" name="activity">
                            <field name="discussion_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="author_name"/>
                                    <field name="category"/>
                                    <field name="reply_count"/>
                                    <field name="upvote_count"/>
                                    <field name="last_activity_date"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Goal &amp; Progress" name="progress">
                            <group>
                                <field name="goal" nolabel="1" placeholder="Define the group's learning goals..."/>
                            </group>
                            <group>
                                <field name="next_session_id"/>
                                <field name="last_activity_date" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Study Group Tree View -->
    <record id="view_study_group_tree" model="ir.ui.view">
        <field name="name">seitech.study.group.tree</field>
        <field name="model">seitech.study.group</field>
        <field name="arch" type="xml">
            <tree string="Study Groups" decoration-info="state == 'active'" 
                  decoration-muted="state == 'archived'">
                <field name="name"/>
                <field name="owner_id"/>
                <field name="group_type"/>
                <field name="privacy"/>
                <field name="member_count"/>
                <field name="discussion_count"/>
                <field name="progress_percentage" widget="progressbar"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'active'"
                       decoration-warning="state == 'draft'"/>
                <field name="last_activity_date"/>
            </tree>
        </field>
    </record>

    <!-- Study Group Kanban View -->
    <record id="view_study_group_kanban" model="ir.ui.view">
        <field name="name">seitech.study.group.kanban</field>
        <field name="model">seitech.study.group</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="owner_id"/>
                <field name="image_128"/>
                <field name="member_count"/>
                <field name="max_members"/>
                <field name="group_type"/>
                <field name="privacy"/>
                <field name="progress_percentage"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('seitech.study.group', 'image_128', record.id.raw_value)" 
                                     alt="Group Image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <span class="badge badge-pill" 
                                          t-att-class="{'public': 'badge-success', 'private': 'badge-warning', 'secret': 'badge-danger'}[record.privacy.raw_value]">
                                        <field name="privacy"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span class="badge badge-pill badge-secondary">
                                        <field name="group_type"/>
                                    </span>
                                    <div class="mt8">
                                        <i class="fa fa-users"/> 
                                        <field name="member_count"/> / <field name="max_members"/> members
                                    </div>
                                    <div class="mt8">
                                        <field name="progress_percentage" widget="progressbar"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        Owner: <field name="owner_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <button name="action_join" type="object" class="btn btn-primary btn-sm">
                                            Join
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Study Group Search View -->
    <record id="view_study_group_search" model="ir.ui.view">
        <field name="name">seitech.study.group.search</field>
        <field name="model">seitech.study.group</field>
        <field name="arch" type="xml">
            <search string="Search Study Groups">
                <field name="name"/>
                <field name="owner_id"/>
                <field name="course_id"/>
                <field name="skill_ids"/>
                
                <filter string="My Groups" name="my_groups" 
                        domain="[('member_ids.user_id', '=', uid), ('member_ids.state', '=', 'active')]"/>
                <filter string="I Own" name="i_own" 
                        domain="[('owner_id', '=', uid)]"/>
                <filter string="Public" name="public" 
                        domain="[('privacy', '=', 'public')]"/>
                <filter string="Active" name="active" 
                        domain="[('state', '=', 'active')]"/>
                <filter string="Featured" name="featured" 
                        domain="[('is_featured', '=', True)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'group_type'}"/>
                    <filter string="Privacy" name="group_privacy" context="{'group_by': 'privacy'}"/>
                    <filter string="Course" name="group_course" context="{'group_by': 'course_id'}"/>
                    <filter string="Owner" name="group_owner" context="{'group_by': 'owner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_study_group" model="ir.actions.act_window">
        <field name="name">Study Groups</field>
        <field name="res_model">seitech.study.group</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first study group
            </p>
            <p>
                Collaborate with fellow learners in study groups focused on specific courses or skills.
            </p>
        </field>
    </record>

    <record id="action_study_group_member" model="ir.actions.act_window">
        <field name="name">Group Members</field>
        <field name="res_model">seitech.study.group.member</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_study_groups" 
              name="Study Groups" 
              parent="menu_discussion_root" 
              action="action_study_group" 
              sequence="15"/>
</odoo>
