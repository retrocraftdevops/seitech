<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Custom Footer Template -->
        <template id="footer_seitech" name="Seitech Footer">
            <footer class="section-dark py-16">
                <div class="container-seitech">
                    <!-- Newsletter Section -->
                    <div class="border-b border-gray-800 pb-12 mb-12">
                        <div class="grid lg:grid-cols-2 gap-8 items-center">
                            <div>
                                <h3 class="text-2xl font-bold text-white mb-2">Stay Updated</h3>
                                <p class="text-gray-400">Get the latest courses and learning resources delivered to your inbox.</p>
                            </div>
                            <form class="newsletter-form-seitech" action="/newsletter/subscribe" method="post">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="email" name="email" class="newsletter-input" placeholder="Enter your email" required="required"/>
                                <button type="submit" class="newsletter-submit">Subscribe</button>
                            </form>
                        </div>
                    </div>

                    <!-- Main Footer Content -->
                    <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-8 mb-12">
                        <!-- Brand Column -->
                        <div class="lg:col-span-2">
                            <a href="/" class="inline-block mb-6">
                                <img src="/web/image/website/1/logo" alt="Seitech International" class="h-10"/>
                            </a>
                            <p class="text-gray-400 mb-6 max-w-md">
                                Empowering professionals with world-class training and certification programs.
                                Building skills that matter for a safer, more productive workplace.
                            </p>
                            <div class="flex gap-4">
                                <a href="#" class="p-2 bg-gray-800 rounded-full text-gray-400 hover:text-white hover:bg-gray-700 transition-colors" aria-label="Facebook">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                                    </svg>
                                </a>
                                <a href="#" class="p-2 bg-gray-800 rounded-full text-gray-400 hover:text-white hover:bg-gray-700 transition-colors" aria-label="Twitter">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
                                    </svg>
                                </a>
                                <a href="#" class="p-2 bg-gray-800 rounded-full text-gray-400 hover:text-white hover:bg-gray-700 transition-colors" aria-label="LinkedIn">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
                                        <rect x="2" y="9" width="4" height="12"/>
                                        <circle cx="4" cy="4" r="2"/>
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <!-- Courses Column -->
                        <div>
                            <h4 class="text-white font-semibold mb-4">Courses</h4>
                            <ul class="space-y-3">
                                <li><a href="/courses" class="text-gray-400 hover:text-white transition-colors">All Courses</a></li>
                                <li><a href="/courses/category/safety" class="text-gray-400 hover:text-white transition-colors">Safety Training</a></li>
                                <li><a href="/courses/category/it" class="text-gray-400 hover:text-white transition-colors">IT &amp; Technology</a></li>
                                <li><a href="/courses/category/management" class="text-gray-400 hover:text-white transition-colors">Management</a></li>
                                <li><a href="/courses/category/compliance" class="text-gray-400 hover:text-white transition-colors">Compliance</a></li>
                            </ul>
                        </div>

                        <!-- Company Column -->
                        <div>
                            <h4 class="text-white font-semibold mb-4">Company</h4>
                            <ul class="space-y-3">
                                <li><a href="/about" class="text-gray-400 hover:text-white transition-colors">About Us</a></li>
                                <li><a href="/instructors" class="text-gray-400 hover:text-white transition-colors">Instructors</a></li>
                                <li><a href="/blog" class="text-gray-400 hover:text-white transition-colors">Blog</a></li>
                                <li><a href="/careers" class="text-gray-400 hover:text-white transition-colors">Careers</a></li>
                                <li><a href="/contact" class="text-gray-400 hover:text-white transition-colors">Contact</a></li>
                            </ul>
                        </div>

                        <!-- Support Column -->
                        <div>
                            <h4 class="text-white font-semibold mb-4">Support</h4>
                            <ul class="space-y-3">
                                <li><a href="/help" class="text-gray-400 hover:text-white transition-colors">Help Center</a></li>
                                <li><a href="/faq" class="text-gray-400 hover:text-white transition-colors">FAQs</a></li>
                                <li><a href="/privacy" class="text-gray-400 hover:text-white transition-colors">Privacy Policy</a></li>
                                <li><a href="/terms" class="text-gray-400 hover:text-white transition-colors">Terms of Service</a></li>
                                <li><a href="/accessibility" class="text-gray-400 hover:text-white transition-colors">Accessibility</a></li>
                            </ul>
                        </div>
                    </div>

                    <!-- Bottom Bar -->
                    <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
                        <p class="text-gray-500 text-sm">
                            Â© <t t-esc="datetime.date.today().year"/> Seitech International. All rights reserved.
                        </p>
                        <div class="flex gap-6 text-sm">
                            <a href="/privacy" class="text-gray-500 hover:text-gray-300 transition-colors">Privacy</a>
                            <a href="/terms" class="text-gray-500 hover:text-gray-300 transition-colors">Terms</a>
                            <a href="/cookies" class="text-gray-500 hover:text-gray-300 transition-colors">Cookies</a>
                        </div>
                    </div>
                </div>
            </footer>
        </template>

    </data>
</odoo>
