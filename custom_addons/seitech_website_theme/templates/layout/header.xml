<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Custom Header Template -->
        <template id="header_seitech" name="Seitech Header">
            <header class="header-seitech">
                <!-- Top Bar -->
                <div class="header-top-bar">
                    <div class="container-seitech">
                        <div class="top-bar-left">
                            <a href="tel:+441233438817" class="top-bar-link">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                                </svg>
                                +44 1233 438817
                            </a>
                            <span class="top-bar-divider">|</span>
                            <a href="mailto:admin@seitechinternational.org" class="top-bar-link">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                                    <polyline points="22,6 12,13 2,6"/>
                                </svg>
                                admin@seitechinternational.org
                            </a>
                        </div>
                        <div class="top-bar-right">
                            <div class="social-links">
                                <a href="https://facebook.com" target="_blank" aria-label="Facebook">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                                    </svg>
                                </a>
                                <a href="https://youtube.com" target="_blank" aria-label="YouTube">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"/>
                                        <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"/>
                                    </svg>
                                </a>
                                <a href="https://linkedin.com" target="_blank" aria-label="LinkedIn">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
                                        <rect x="2" y="9" width="4" height="12"/>
                                        <circle cx="4" cy="4" r="2"/>
                                    </svg>
                                </a>
                            </div>
                            <!-- Language Selector -->
                            <div class="language-selector">
                                <select class="language-select" onchange="window.location.href='/web/lang/' + this.value">
                                    <option value="en_US" selected="selected">English</option>
                                    <option value="fr_FR">French</option>
                                    <option value="de_DE">German</option>
                                    <option value="es_ES">Spanish</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="header-seitech-inner">
                    <!-- Logo -->
                    <a href="/" class="header-logo">
                        <img src="/web/image/website/1/logo" alt="Seitech International" class="logo-img"/>
                    </a>

                    <!-- Main Navigation (Desktop) -->
                    <nav class="nav-seitech" role="navigation" aria-label="Main navigation">
                        <div class="nav-seitech-item">
                            <a href="/" class="nav-seitech-link">Home</a>
                        </div>

                        <div class="nav-seitech-item">
                            <a href="/courses" class="nav-seitech-link">Courses</a>
                        </div>

                        <div class="nav-seitech-item">
                            <a href="#" class="nav-seitech-link">
                                Categories
                                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="m6 9 6 6 6-6"/>
                                </svg>
                            </a>
                            <div class="mega-menu-seitech">
                                <div class="mega-menu-grid">
                                    <!-- Dynamic Categories from seitech.course.category -->
                                    <t t-set="categories" t-value="request.env['seitech.course.category'].sudo().search([('is_published', '=', True), ('parent_id', '=', False)], limit=8)"/>
                                    <t t-if="categories">
                                        <div class="mega-menu-section">
                                            <h4 class="mega-menu-title">Course Categories</h4>
                                            <t t-foreach="categories" t-as="category">
                                                <a t-attf-href="/courses?category=#{category.id}" class="mega-menu-item">
                                                    <div class="mega-menu-icon">
                                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                            <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/>
                                                        </svg>
                                                    </div>
                                                    <div class="mega-menu-content">
                                                        <div class="mega-menu-item-title" t-esc="category.name"/>
                                                        <div class="mega-menu-item-desc" t-esc="category.description or 'Explore courses'"/>
                                                    </div>
                                                </a>
                                            </t>
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <div class="mega-menu-section">
                                            <h4 class="mega-menu-title">Popular Categories</h4>
                                            <a href="/courses/category/safety" class="mega-menu-item">
                                                <div class="mega-menu-icon">
                                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                                                    </svg>
                                                </div>
                                                <div class="mega-menu-content">
                                                    <div class="mega-menu-item-title">Safety Training</div>
                                                    <div class="mega-menu-item-desc">Workplace safety and compliance</div>
                                                </div>
                                            </a>
                                            <a href="/courses/category/it" class="mega-menu-item">
                                                <div class="mega-menu-icon">
                                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <rect x="2" y="3" width="20" height="14" rx="2"/>
                                                        <path d="M8 21h8M12 17v4"/>
                                                    </svg>
                                                </div>
                                                <div class="mega-menu-content">
                                                    <div class="mega-menu-item-title">IT &amp; Technology</div>
                                                    <div class="mega-menu-item-desc">Technical skills and certifications</div>
                                                </div>
                                            </a>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>

                        <div class="nav-seitech-item">
                            <a href="/about" class="nav-seitech-link">About</a>
                        </div>

                        <div class="nav-seitech-item">
                            <a href="/blog" class="nav-seitech-link">Blog</a>
                        </div>

                        <div class="nav-seitech-item">
                            <a href="/contact" class="nav-seitech-link">Contact</a>
                        </div>
                    </nav>

                    <!-- Header Actions -->
                    <div class="header-actions">
                        <!-- Search (Desktop) -->
                        <div class="header-search">
                            <form action="/courses" method="get">
                                <input type="search" name="search" class="search-input" placeholder="Search courses..."/>
                            </form>
                        </div>

                        <!-- Cart Icon -->
                        <a href="/shop/cart" class="header-cart">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="9" cy="21" r="1"/>
                                <circle cx="20" cy="21" r="1"/>
                                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
                            </svg>
                            <span class="cart-count" t-esc="request.website.sale_get_order().order_line.filtered(lambda l: not l.is_delivery).__len__() if request.website.sale_get_order() else 0"/>
                        </a>

                        <!-- Auth Buttons -->
                        <t t-if="not request.env.user._is_public()">
                            <a href="/my/home" class="btn-seitech-secondary btn-seitech-sm">My Dashboard</a>
                        </t>
                        <t t-else="">
                            <a href="/web/login" class="btn-seitech-ghost">Log In</a>
                            <a href="/web/signup" class="btn-seitech-primary">Get Started</a>
                        </t>

                        <!-- Mobile Menu Toggle -->
                        <button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
                            <svg class="toggle-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 12h18M3 6h18M3 18h18"/>
                            </svg>
                        </button>
                    </div>
                </div>
            </header>

            <!-- Mobile Menu -->
            <nav class="mobile-menu-seitech" role="navigation" aria-label="Mobile navigation">
                <div class="mobile-nav-item">
                    <a href="/" class="mobile-nav-link">Home</a>
                </div>
                <div class="mobile-nav-item">
                    <a href="/courses" class="mobile-nav-link">Courses</a>
                </div>
                <div class="mobile-nav-item">
                    <a href="#" class="mobile-nav-link" data-submenu="categories">
                        Categories
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="m6 9 6 6 6-6"/>
                        </svg>
                    </a>
                    <div class="mobile-submenu">
                        <a href="/courses/category/safety" class="mobile-submenu-link">Safety Training</a>
                        <a href="/courses/category/it" class="mobile-submenu-link">IT &amp; Technology</a>
                        <a href="/courses/category/management" class="mobile-submenu-link">Management</a>
                        <a href="/courses/category/compliance" class="mobile-submenu-link">Compliance</a>
                    </div>
                </div>
                <div class="mobile-nav-item">
                    <a href="/about" class="mobile-nav-link">About</a>
                </div>
                <div class="mobile-nav-item">
                    <a href="/blog" class="mobile-nav-link">Blog</a>
                </div>
                <div class="mobile-nav-item">
                    <a href="/contact" class="mobile-nav-link">Contact</a>
                </div>
                <div class="mobile-nav-item mt-6">
                    <t t-if="not request.env.user._is_public()">
                        <a href="/my/home" class="btn-seitech-primary w-full text-center">My Dashboard</a>
                    </t>
                    <t t-else="">
                        <a href="/web/login" class="btn-seitech-secondary w-full text-center mb-2">Log In</a>
                        <a href="/web/signup" class="btn-seitech-primary w-full text-center">Get Started</a>
                    </t>
                </div>
            </nav>
        </template>

    </data>
</odoo>
                    <t t-else="">
                        <a href="/web/login" class="btn-seitech-secondary w-full text-center mb-4">Log In</a>
                        <a href="/web/signup" class="btn-seitech-primary w-full text-center">Get Started</a>
                    </t>
                </div>
            </nav>
        </template>

    </data>
</odoo>
