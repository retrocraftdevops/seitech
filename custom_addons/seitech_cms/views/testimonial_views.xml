<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cms_testimonial_tree" model="ir.ui.view">
        <field name="name">seitech.cms.testimonial.tree</field>
        <field name="model">seitech.cms.testimonial</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="company"/>
                <field name="rating"/>
                <field name="service_type"/>
                <field name="is_featured"/>
                <field name="is_published"/>
            </list>
        </field>
    </record>

    <record id="view_cms_testimonial_form" model="ir.ui.view">
        <field name="name">seitech.cms.testimonial.form</field>
        <field name="model">seitech.cms.testimonial</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="is_published" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <field name="avatar" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Customer Name"/></h1>
                        <field name="title" placeholder="Job Title"/>
                    </div>
                    <group>
                        <group>
                            <field name="company"/>
                            <field name="rating"/>
                            <field name="service_type"/>
                        </group>
                        <group>
                            <field name="course_name"/>
                            <field name="date"/>
                            <field name="is_featured"/>
                        </group>
                    </group>
                    <group>
                        <field name="content" placeholder="Testimonial content..."/>
                    </group>
                    <group>
                        <group>
                            <field name="source"/>
                            <field name="source_url"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_cms_testimonial_kanban" model="ir.ui.view">
        <field name="name">seitech.cms.testimonial.kanban</field>
        <field name="model">seitech.cms.testimonial</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="avatar"/>
                <field name="company"/>
                <field name="content"/>
                <field name="rating"/>
                <templates>
                    <t t-name="card">
                        <aside>
                            <field name="avatar" widget="image" class="o_kanban_image"/>
                        </aside>
                        <main>
                            <field name="name" class="fw-bold fs-5"/>
                            <field name="company"/>
                            <field name="content" class="text-muted"/>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_cms_testimonials" model="ir.actions.act_window">
        <field name="name">Testimonials</field>
        <field name="res_model">seitech.cms.testimonial</field>
        <field name="view_mode">list,kanban,form</field>
    </record>
</odoo>
