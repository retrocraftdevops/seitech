<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cms_site_settings_form" model="ir.ui.view">
        <field name="name">seitech.cms.site.settings.form</field>
        <field name="model">seitech.cms.site.settings</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <notebook>
                        <page string="Branding">
                            <group>
                                <group>
                                    <field name="name"/>
                                    <field name="tagline"/>
                                </group>
                                <group>
                                    <field name="logo" widget="image"/>
                                    <field name="logo_dark" widget="image"/>
                                    <field name="favicon" widget="image"/>
                                </group>
                            </group>
                        </page>
                        <page string="Contact">
                            <group>
                                <group>
                                    <field name="company_name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="phone_secondary"/>
                                    <field name="whatsapp"/>
                                </group>
                                <group>
                                    <field name="address_line1"/>
                                    <field name="address_line2"/>
                                    <field name="city"/>
                                    <field name="postcode"/>
                                    <field name="country"/>
                                    <field name="google_maps_url"/>
                                </group>
                            </group>
                        </page>
                        <page string="Social Media">
                            <group>
                                <group>
                                    <field name="facebook_url"/>
                                    <field name="twitter_url"/>
                                    <field name="linkedin_url"/>
                                </group>
                                <group>
                                    <field name="instagram_url"/>
                                    <field name="youtube_url"/>
                                    <field name="tiktok_url"/>
                                </group>
                            </group>
                        </page>
                        <page string="SEO">
                            <group>
                                <group>
                                    <field name="default_meta_title"/>
                                    <field name="default_meta_description"/>
                                </group>
                                <group>
                                    <field name="default_og_image" widget="image"/>
                                    <field name="google_analytics_id"/>
                                    <field name="google_tag_manager_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Legal">
                            <group>
                                <group>
                                    <field name="company_number"/>
                                    <field name="vat_number"/>
                                </group>
                                <group>
                                    <field name="privacy_policy_url"/>
                                    <field name="terms_url"/>
                                    <field name="cookie_policy_url"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notifications">
                            <group>
                                <field name="notification_email"/>
                                <field name="contact_form_recipient"/>
                                <field name="booking_notification_email"/>
                            </group>
                        </page>
                        <page string="Features">
                            <group>
                                <group>
                                    <field name="enable_live_chat"/>
                                    <field name="enable_newsletter"/>
                                </group>
                                <group>
                                    <field name="maintenance_mode"/>
                                    <field name="maintenance_message"/>
                                </group>
                            </group>
                        </page>
                        <page string="Footer">
                            <group>
                                <field name="footer_text"/>
                                <field name="copyright_text"/>
                            </group>
                        </page>
                        <page string="Business Hours">
                            <group>
                                <field name="timezone"/>
                                <field name="business_hours" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cms_site_settings" model="ir.actions.act_window">
        <field name="name">Site Settings</field>
        <field name="res_model">seitech.cms.site.settings</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <!-- Navigation Views -->
    <record id="view_cms_navigation_tree" model="ir.ui.view">
        <field name="name">seitech.cms.navigation.tree</field>
        <field name="model">seitech.cms.navigation</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="menu_type"/>
                <field name="url"/>
                <field name="parent_id"/>
                <field name="is_published"/>
            </list>
        </field>
    </record>

    <record id="view_cms_navigation_form" model="ir.ui.view">
        <field name="name">seitech.cms.navigation.form</field>
        <field name="model">seitech.cms.navigation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="menu_type"/>
                            <field name="url"/>
                            <field name="page_id"/>
                        </group>
                        <group>
                            <field name="parent_id"/>
                            <field name="icon"/>
                            <field name="description"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="open_new_tab"/>
                            <field name="is_highlighted"/>
                            <field name="is_published"/>
                        </group>
                    </group>
                    <field name="child_ids">
                        <list>
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="url"/>
                            <field name="is_published"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cms_navigation" model="ir.actions.act_window">
        <field name="name">Navigation Menus</field>
        <field name="res_model">seitech.cms.navigation</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('parent_id', '=', False)]</field>
    </record>
</odoo>
